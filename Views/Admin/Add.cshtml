@using TasksDatabase.ViewModels
@model AddViewModel
@{
    ViewBag.Title = "Добавление задания";
}

    <form asp-action="add" asp-controller="admin">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Выберите курс</label>
            </div>
            <select asp-for="CourseId"
                    asp-items="@(new SelectList(Model.Courses, "Id", "Name"))">
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Выберите тип задания:</label>
            </div>
            <select asp-for="TypeId"
                    asp-items="@(new SelectList(Model.Types, "Id", "Name"))">
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Выберите разработчика:</label>
            </div>
            <select asp-for="DeveloperId"
                    asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Выберите проверяющего:</label>
            </div>
            <select asp-for="ReviewerId"
                    asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <input asp-for="Comment" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-primary" />
        </div>
    </form>