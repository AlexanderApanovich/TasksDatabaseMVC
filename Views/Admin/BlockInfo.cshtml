@using TasksDatabase.ViewModels
@model BlockInfoViewModel
@{
    ViewBag.Title = "Блоки";
}

    <body>
        <form asp-action="blockinfo" method="get" class="form-inline">
            <select name="block" class="form-control mb-2">
                <option value="0">Все блоки</option>
                @foreach (var block in Model.Blocks)
                {
                    <option value="@block.Id">@block.Name</option>
                }
            </select>
            <input type="submit" value="Выбрать блок" class="btn btn-success mb-2 ml-2" />
        </form>

        <form asp-action="courseinfo" method="get" class="form-inline">
            <input type="hidden" name="block" value="@Model.CurrentBlock" />
            <input type="submit" value="Информация по текущему блоку" class="btn btn-success mb-2" />
        </form>

            <table class="table table-hover" style="border-collapse:collapse;">
                <tbody>
                    @foreach (var course in Model.Courses)
                    {
                        <tr>
                            <td>
                                @course.FullName
                            </td>
                            <td>
                                <form asp-action="courseinfo" method="get">
                                    <input type="hidden" name="course" value="@course.Id" />
                                    <input type="submit" value="Информация" class="btn btn-info" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


    </body>