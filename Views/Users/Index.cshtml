@model IEnumerable<TasksDatabase.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<h2>Список пользователей</h2>
<table class="table">
    <tr><th>Имя пользователя</th><th></th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                <a class="btn btn-sm btn-info" asp-controller="admin" asp-action="UserInfo" asp-route-User="@user.Id">Информация</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<a class="btn btn-info" asp-action="Create">Добавить пользователя</a>